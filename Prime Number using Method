class Demo{
    static bool PrimeNumber( int num)
    {
        int count = 0;
        bool result = true;
        for(int i = 2; i< num/2; i++)
        {
            if(num % i == 0)
            {
                result= false;
                count++;
                break;
            }
        }
        if(count == 0)
        {
           result = true;
        }
    return result; 
    }
    static void Main()
    {
        System.Console.Write("Enter the number : ");
        int num = int.Parse(System.Console.ReadLine());
        System.Console.WriteLine(PrimeNumber(num));
    }
}
